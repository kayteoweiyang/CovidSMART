<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOut">

    <com.skyfishjy.library.RippleBackground
        android:id="@+id/ripple1"
        android:layout_width="312dp"
        android:layout_height="244dp"
        android:layout_marginTop="72dp"
        app:layout_constraintEnd_toEndOf="@+id/header2CO"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/header2CO"
        app:layout_constraintTop_toBottomOf="@+id/header2CO"
        app:rb_color="#009900"
        app:rb_duration="3000"
        app:rb_radius="40dp"
        app:rb_rippleAmount="4"
        app:rb_scale="3">

        <ImageView
            android:layout_marginTop="40sp"
            android:id="@+id/checkOutImage"
            android:layout_width="106dp"
            android:layout_height="105dp"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="91dp"
            android:background="@drawable/ic_checkout"
            android:backgroundTint="@color/white"
            app:srcCompat="@drawable/ic_checkout" />

    </com.skyfishjy.library.RippleBackground>

    <TextView
        android:id="@+id/header2CO"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Check Out Current Location : "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

</androidx.constraintlayout.widget.ConstraintLayout>