<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/r_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Hello"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_addr"
            android:layout_marginLeft="20dp"
            android:text="Date : "
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_addr"
            android:layout_toRightOf="@+id/r_date_txt"
            android:text="0000-00-00"
            android:textSize="14dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/r_time_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_date_txt"
            android:layout_marginLeft="20dp"
            android:text="Time : "
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/r_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/r_date_txt"
            android:layout_toRightOf="@+id/r_time_txt"
            android:text="00:00:00"
            android:textSize="14dp"
            android:textStyle="bold"/>
    </RelativeLayout>
</LinearLayout>