<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckIn">

    <EditText
        android:id="@+id/addressCI"
        android:layout_width="257dp"
        android:layout_height="47dp"
        android:layout_marginTop="8dp"
        android:drawablePadding="10dp"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="Search postal, address"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/headerCI"
        app:layout_constraintTop_toBottomOf="@+id/headerCI" />

    <TextView
        android:id="@+id/headerCI"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:layout_marginTop="84dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Check In by Postal Code :"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header2CI"
        android:layout_width="327dp"
        android:layout_height="38dp"
        android:layout_marginTop="82dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Check In by Current Location : "
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/headerCI"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/headerCI"
        app:layout_constraintTop_toBottomOf="@+id/headerCI" />


    <com.skyfishjy.library.RippleBackground
        android:id="@+id/ripple"
        android:layout_width="232dp"
        android:layout_height="229dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="@+id/header2CI"
        app:layout_constraintStart_toStartOf="@+id/header2CI"
        app:layout_constraintTop_toBottomOf="@+id/header2CI"
        app:rb_color="#0099CC"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/checkInImage"
            android:layout_width="90dp"
            android:layout_height="81dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_location"
            tools:layout_conversion_absoluteHeight="98dp"
            tools:layout_conversion_absoluteWidth="111dp"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="192dp" />
    </com.skyfishjy.library.RippleBackground>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="414dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:background="@color/white"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.666"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="53dp"
        android:layout_height="50dp"
        android:layout_marginStart="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="@+id/headerCI"
        app:layout_constraintStart_toEndOf="@+id/addressCI"
        app:layout_constraintTop_toBottomOf="@+id/headerCI"
        app:srcCompat="@drawable/ic_search" />

</androidx.constraintlayout.widget.ConstraintLayout>