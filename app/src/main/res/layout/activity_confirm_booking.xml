<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmBooking">

    <Button
        android:id="@+id/backConfirm"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="472dp"
        android:fontFamily="@font/aldrich"
        android:text="Back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/txtTimeConfirm"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/aldrich"
        android:hint="Time"
        android:shadowColor="@color/black"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/typeConfirm"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/TimeConfirm"
        android:layout_width="138dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="236dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Time : "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/txtDateConfirm"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/aldrich"
        android:hint="Date"
        android:shadowColor="@color/black"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/typeConfirm"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/DateConfirm"
        android:layout_width="138dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="156dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Date : "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/txtTypeConfirm"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_marginStart="26dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/aldrich"
        android:hint="Type"
        android:shadowColor="@color/black"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/typeConfirm"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/typeConfirm"
        android:layout_width="138dp"
        android:layout_height="0dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/aldrich"
        android:shadowColor="@color/black"
        android:text="Type : "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <Button
        android:id="@+id/bookConfirm"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_marginTop="388dp"
        android:fontFamily="@font/aldrich"
        android:text="Book"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerConfirm" />

    <TextView
        android:id="@+id/headerConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="Booking Confirmation"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>