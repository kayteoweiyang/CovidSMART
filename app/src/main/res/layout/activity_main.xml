<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/welcomeMain"
        android:layout_width="289dp"
        android:layout_height="46dp"
        android:fontFamily="@font/aldrich"
        android:text="Welcome"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="36sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <ImageView
        android:id="@+id/imgMain"
        android:layout_width="202dp"
        android:layout_height="226dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="@+id/welcomeMain"
        app:layout_constraintStart_toStartOf="@+id/welcomeMain"
        app:layout_constraintTop_toBottomOf="@+id/welcomeMain"
        app:srcCompat="@android:drawable/btn_star_big_off" />

    <EditText
        android:id="@+id/nricMain"
        android:layout_width="236dp"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="NRIC"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/imgMain"
        app:layout_constraintStart_toStartOf="@+id/imgMain"
        app:layout_constraintTop_toBottomOf="@+id/imgMain" />

    <EditText
        android:id="@+id/passwordMain"
        android:layout_width="236dp"
        android:layout_height="46dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:fontFamily="@font/aldrich"
        android:hint="Password"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="@+id/nricMain"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/nricMain"
        app:layout_constraintTop_toBottomOf="@+id/nricMain" />

    <Button
        android:id="@+id/loginbtnMain"
        android:layout_width="296dp"
        android:layout_height="45dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/aldrich"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/passwordMain"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/passwordMain"
        app:layout_constraintTop_toBottomOf="@+id/passwordMain" />

    <Button
        android:id="@+id/registerbtnMain"
        android:layout_width="296dp"
        android:layout_height="47dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/aldrich"
        android:text="Register!"
        app:layout_constraintEnd_toEndOf="@+id/loginbtnMain"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loginbtnMain"
        app:layout_constraintTop_toBottomOf="@+id/loginbtnMain" />

</androidx.constraintlayout.widget.ConstraintLayout>